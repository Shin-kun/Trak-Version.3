<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout"
    android:layout_alignParentStart="true"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:orientation="horizontal">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_ins"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        app:layout_scrollFlags="scroll|enterAlways"
        app:theme="@style/GalaxyZooThemeToolbarDarkOverflow"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/road_acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-3dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_accident"
            app:backgroundTint="@color/dirty_white"
            app:fabSize="mini" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/engFail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/emergency_icon"
            app:backgroundTint="@color/dirty_white"
            app:fabSize="mini" />

        <EditText
            android:id="@+id/edit_txt_msg"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/chat_txt_bg"
            android:hint="Type a message"
            android:imeOptions="actionSend"
            android:inputType="text"
            android:padding="15dp"
            android:textColor="@color/dot_active" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:src="@drawable/ic_sends"
            android:tint="@android:color/white"
            app:backgroundTint="@color/buttonColor"
            app:fabSize="mini" />

    </android.support.v7.widget.Toolbar>

</android.support.constraint.ConstraintLayout>