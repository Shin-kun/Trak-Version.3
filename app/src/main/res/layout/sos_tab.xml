<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/engFail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Engine Failure"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/emerStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/engFail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="98dp"
        android:text="Emergency Stop" />

    <Button
        android:id="@+id/roadAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emerStop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp"
        android:text="Road Accident" />
</RelativeLayout>