<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:text="STATUS"
            android:layout_height="25dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="5dp"
            android:textSize="13sp"
            android:textColor="#303030" />

        <TextView
            android:id="@+id/status_txt"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/det_text"
            android:text="status" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/busCompany"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="5dp"
            android:textSize="13sp"
            android:textColor="#303030"
            android:layout_marginTop="15dp"
            android:text="BUS COMPANY" />

        <TextView
            android:id="@+id/bus_company_txt"
            android:text="name of bus company"
            android:background="@drawable/det_text"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="40dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/busNumber"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="5dp"
            android:textSize="13sp"
            android:textColor="#303030"
            android:layout_marginTop="15dp"
            android:text="BUS NUMBER" />

        <TextView
            android:id="@+id/bus_number_txt"
            android:text="bus number"
            android:background="@drawable/det_text"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="40dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/route"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="5dp"
            android:textSize="13sp"
            android:layout_marginTop="15dp"
            android:textColor="#303030"
            android:text="ROUTE" />

        <TextView
            android:id="@+id/route_txt"
            android:text="route"
            android:background="@drawable/det_text"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="47dp"
            android:layout_marginLeft="40dp"  />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/accommodation"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="5dp"
            android:textSize="13sp"
            android:layout_marginTop="15dp"
            android:textColor="#303030"
            android:text="ACCOMMODATION" />

        <TextView
            android:id="@+id/accommodation_txt"
            android:text="accommodation"
            android:background="@drawable/det_text"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="40dp" />
    </RelativeLayout>

</LinearLayout>